<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/colorPrimaryDark">

            <ImageView
                android:id="@+id/main_fragment_toLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:src="@mipmap/community" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/tittle_27"
                />

            <ImageView
                android:id="@+id/main_fragment_toRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/personal"/>
        </RelativeLayout>


        <ImageView
            android:src="@mipmap/flow"
            android:layout_marginBottom="5dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="40dp"
            android:layout_height="5dp" />


        <View
            android:layout_alignParentBottom="true"
            android:background="#cccccc"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    </RelativeLayout>
    <LinearLayout
        android:background="@color/colorPrimaryDark"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout

            android:id="@+id/main_fragment_indicator_like_click"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView

                android:id="@+id/main_fragment_indicator_like_icon"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/selector_main_like" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="猜你喜欢"
                android:textColor="@color/text_color_000000" />
            <View
                android:id="@+id/main_fragment_indicator_like_line"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_horizontal"

                android:background="@color/text_color_000000"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_fragment_indicator_nearby_click"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView

                android:id="@+id/main_fragment_indicator_nearby_icon"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/selector_main_nearby" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="附近动态"
                android:textColor="@color/text_color_000000" />
            <View
                android:id="@+id/main_fragment_indicator_nearby_line"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"

                android:layout_gravity="center_horizontal"

                android:background="@color/text_color_000000"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_fragment_indicator_hi_click"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView

                android:id="@+id/main_fragment_indicator_hi_icon"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/selector_main_hi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="打过招呼"
                android:textColor="@color/text_color_000000" />
            <View
                android:id="@+id/main_fragment_indicator_hi_line"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"

                android:layout_gravity="center_horizontal"

                android:background="@color/text_color_000000"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_fragment_indicator_message_click"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView

                android:id="@+id/main_fragment_indicator_message_icon"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/selector_main_message" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="消息＆好友"
                android:textColor="@color/text_color_000000" />

            <View
                android:id="@+id/main_fragment_indicator_message_line"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"

                android:layout_gravity="center_horizontal"

                android:background="@color/text_color_000000"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
        </LinearLayout>
    </LinearLayout>

    <com.lede.second_23.ui.view.NoScrollViewPager
        android:id="@+id/main_fragment_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.lede.second_23.ui.view.NoScrollViewPager>


</LinearLayout>
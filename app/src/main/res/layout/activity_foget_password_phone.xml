<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_register__phone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/registerbgred"
    tools:context="com.lede.second_23.ui.activity.ForgetPassword_PhoneActivity">

    <RelativeLayout
        android:layout_marginTop="33dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView

            android:padding="3dp"
            android:id="@+id/iv_forget_password_activity_back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="27dp"
            android:src="@mipmap/resign_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView

            android:layout_centerVertical="true"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"

            android:src="@mipmap/twentyseven" />

    </RelativeLayout>



    <TextView

        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:text="获取验证码"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:text="手机号"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/et_forget_password_activity_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"

        android:inputType="phone"
        android:textColor="#ffffff"
        android:textColorHint="#999999"
        android:textSize="18sp"
        android:theme="@style/MyEditText" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:text="验证码"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_forget_password_activity_validate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"

            android:layout_weight="1"

            android:inputType="number"
            android:textColor="#ffffff"
            android:textColorHint="#999999"
            android:textSize="18sp"
            android:theme="@style/MyEditText" />

        <Button
            android:id="@+id/bt_forget_password_activity_send"

            android:layout_width="100dp"
            android:layout_height="36dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_butten_white"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="#f93aa1"
            android:textSize="16sp" />


    </LinearLayout>

    <ImageView
        android:id="@+id/tv_forget_password_activity_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="30dp"
        android:layout_marginTop="40dp"
        android:src="@mipmap/enter" />






</LinearLayout>

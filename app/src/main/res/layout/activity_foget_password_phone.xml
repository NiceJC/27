<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_register__phone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lede.second_23.ui.activity.ForgetPassword_PhoneActivity">

    <ImageView
        android:id="@+id/iv_forget_password_activity_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/back"/>
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="164dp"
        android:layout_height="24.5dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/logo_27_twenty_seven"/>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_login_activity_cardview"
        android:layout_width="300dp"
        android:layout_height="340dp"
        android:layout_centerInParent="true"
        app:cardElevation="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/ll_forget_password_phone"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="37dp"
                android:layout_marginRight="37dp"
                android:layout_marginTop="65dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/shap_edit_linearlayout_all">



                <EditText
                    android:id="@+id/et_forget_password_activity_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:background="@null"
                    android:hint="手机号"
                    android:textColor="#000000"
                    android:textColorHint="#999999"
                    android:textSize="20sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_forget_password_validate"

                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="37dp"
                android:layout_marginRight="37dp"
                android:orientation="horizontal"
                android:layout_marginTop="28dp"
                android:layout_below="@id/ll_forget_password_phone">
                <LinearLayout
                    android:layout_width="145dp"
                    android:layout_height="45dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"

                    android:background="@drawable/shap_edit_linearlayout_all"
                    >



                    <EditText
                        android:id="@+id/et_forget_password_activity_validate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:background="@null"
                        android:hint="验证码"
                        android:textColor="#000000"
                        android:textColorHint="#999999"
                        android:textSize="20sp" />

                </LinearLayout>
                <Button
                    android:id="@+id/bt_forget_password_activity_send"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/shap_edit_linearlayout_all"
                    android:text="点击获取"
                    android:gravity="center"
                    android:textSize="14dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#999999"/>
            </LinearLayout>


            <TextView
                android:id="@+id/tv_forget_password_activity_next"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="37dp"
                android:layout_marginRight="37dp"
                android:layout_marginTop="33dp"
                android:background="@drawable/shap_edit_linearlayout_all"
                android:text="下一步"
                android:layout_below="@id/ll_forget_password_validate"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="#5a9bd6"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>






</RelativeLayout>

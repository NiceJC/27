                android:id="@+id/tv_edit_information_activity_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="昵称"
                android:layout_centerHorizontal="true"
                android:textColor="#333333"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/tv_edit_information_activity_sign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_below="@id/tv_edit_information_activity_nickname"
                android:text="签名"
                android:layout_centerHorizontal="true"
                android:textColor="#919191"
                android:textSize="16sp"/>
        </RelativeLayout>

        <com.thinkcool.circletextimageview.CircleTextImageView
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="63dp"

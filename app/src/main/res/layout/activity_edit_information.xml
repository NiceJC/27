                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@mipmap/back_grey" />

            <TextView
                android:id="@+id/tv_edit_information_activity_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/iv_edit_information_activity_city_title"
                android:text="浙江省 杭州市"
                android:textColor="#333333"
                android:textSize="18sp" />
            <View
                android:layout_width="315dp"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="#cccccc"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_edit_information_activity_job"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="#ffffff">

            <TextView
                android:id="@+id/tv_edit_information_activity_hobby_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="爱好"
                android:textColor="#919191"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/iv_editinformation_go7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@mipmap/back_grey" />

            <TextView
                android:id="@+id/tv_edit_information_activity_hobby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/tv_edit_information_activity_hobby_title"
                android:text="爱好"
                android:textColor="#333333"
                android:textSize="18sp" />
        </RelativeLayout>

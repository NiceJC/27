<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit_information"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context="com.lede.second_23.ui.activity.EditInformationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:background="#8181ff">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp">

                    <ImageView
                        android:id="@+id/iv_edit_information_activity_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:padding="3dp"
                        android:src="@mipmap/back_white" />

                    <TextView
                        android:id="@+id/tv_edit_information_activity_updata"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="保存"
                        android:textColor="#ffffff"
                        android:textSize="18sp" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rl_editinformation_touxiang"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="50dp">

                    <com.example.myapplication.views.diyimage.DIYImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/head_bg_info"
                        app:diy_image_Type="circle" />

                    <com.example.myapplication.views.diyimage.DIYImageView
                        android:id="@+id/circle_iv_editinformation_touxiang"
                        android:layout_width="88dp"
                        android:layout_height="88dp"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/loading"
                        app:diy_image_Type="circle" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_edit_information_activity_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rl_editinformation_touxiang"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="昵称"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_edit_information_activity_sign"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_edit_information_activity_nickname"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="22dp"
                    android:gravity="center"
                    android:text="签名"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="#ffffff"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_edit_information_activity_sex"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp">


                    <TextView
                        android:id="@+id/tv_edit_information_activity_sex_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:drawableLeft="@mipmap/sex"
                        android:drawablePadding="16dp"
                        android:text="性别"
                        android:textColor="#8181ff"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/tv_edit_information_activity_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/tv_edit_information_activity_sex_title"
                        android:text="性别"
                        android:textColor="#3333ff"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/iv_editinformation_go2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/back_grey" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="#dddddd" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_edit_information_activity_age"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp">

                    <TextView
                        android:id="@+id/tv_edit_information_activity_age_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:drawableLeft="@mipmap/age"
                        android:drawablePadding="16dp"
                        android:text="年龄"
                        android:textColor="#8181ff"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/tv_edit_information_activity_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/tv_edit_information_activity_age_title"
                        android:text="年龄"
                        android:textColor="#3333ff"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/iv_editinformation_go4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/back_grey" />

                    <TextView
                        android:id="@+id/tv_edit_information_activity_constellation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/tv_edit_information_activity_age"
                        android:text="星座"
                        android:textColor="#3333ff"
                        android:textSize="18sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="#dddddd" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_edit_information_activity_city"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp">


                    <TextView
                        android:id="@+id/tv_edit_information_activity_city_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:drawableLeft="@mipmap/city"
                        android:drawablePadding="16dp"
                        android:text="城市"
                        android:textColor="#8181ff"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/tv_edit_information_activity_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/tv_edit_information_activity_city_title"
                        android:text="杭州"
                        android:textColor="#3333ff"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/iv_editinformation_go6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/back_grey" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="#dddddd" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_edit_information_activity_job"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp">

                    <TextView
                        android:id="@+id/tv_edit_information_activity_hobby_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:drawableLeft="@mipmap/interest"
                        android:drawablePadding="16dp"
                        android:text="爱好"
                        android:textColor="#8181ff"
                        android:textSize="17sp" />

                    <ImageView
                        android:id="@+id/iv_editinformation_go7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/back_grey" />

                    <TextView
                        android:id="@+id/tv_edit_information_activity_hobby"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/tv_edit_information_activity_hobby_title"
                        android:text="爱好"
                        android:textColor="#3333ff"
                        android:textSize="18sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="#dddddd" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_edit_information_activity_school"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp">

                    <TextView
                        android:id="@+id/tv_edit_information_activity_school_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:drawableLeft="@mipmap/school"
                        android:drawablePadding="16dp"
                        android:text="学校"
                        android:textColor="#8181ff"
                        android:textSize="17sp" />

                    <ImageView
                        android:id="@+id/iv_editinformation_go8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/back_grey" />

                    <TextView
                        android:id="@+id/tv_edit_information_activity_school"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/tv_edit_information_activity_school_title"
                        android:text="学校"
                        android:textColor="#3333ff"
                        android:textSize="18sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="#dddddd" />
                </RelativeLayout>


            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>

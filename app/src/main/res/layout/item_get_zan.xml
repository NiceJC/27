<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <com.example.myapplication.views.diyimage.DIYImageView
            android:id="@+id/diyiv_item_get_zan_userimg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:diy_image_Type="circle"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/test4"/>
        <TextView
            android:id="@+id/tv_item_get_zan_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#222222"
            android:text="xx"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/diyiv_item_get_zan_userimg"/>

        <TextView
            android:textSize="14sp"

            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_item_get_zan_nickname"
            android:text="等x人赞了你"
            android:id="@+id/zan_count"
            android:textColor="#999999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <ImageView
            android:id="@+id/iv_item_get_zan_forum_pic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:src="@mipmap/test8"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee"/>
</LinearLayout>
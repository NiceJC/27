<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.example.myapplication.views.diyimage.DIYImageView
            android:id="@+id/diyiv_item_forum_detail1_userimg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:diy_image_Type="circle"
            android:src="@mipmap/test3"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/tv_item_forum_detail1_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="用户昵称"
            android:textColor="#000000"
            android:layout_toRightOf="@id/diyiv_item_forum_detail1_userimg"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/tv_item_forum_detail1_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="评论时间"
            android:textColor="#999999"
            android:layout_toRightOf="@id/diyiv_item_forum_detail1_userimg"
            android:layout_below="@id/tv_item_forum_detail1_nickname"
            android:layout_marginTop="4dp"/>
        <TextView
            android:id="@+id/tv_item_forum_detail1_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/diyiv_item_forum_detail1_userimg"
            android:layout_below="@id/tv_item_forum_detail1_time"
            android:layout_marginTop="4dp"
            android:textColor="#333333"
            android:text="评论主体"
            android:textSize="18sp"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_item_forum_detail1_replay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="60dp"
        android:text="查看回复"
        android:textColor="#999999"
        android:layout_marginTop="5dp"></TextView>
</LinearLayout>
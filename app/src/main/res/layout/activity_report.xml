<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_report"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f1f1f1"
    tools:context="com.lede.second_23.ui.activity.ReportActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white">
        <ImageView
            android:id="@+id/iv_report_activity_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/back"/>
        <TextView
            android:id="@+id/tv_report_activity_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="举报"

            android:textColor="@color/black"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/tv_report_activity_commit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp" />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="举报类型"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:textColor="#999999"/>
    <RadioGroup
        android:id="@+id/rg_report_activity_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff">
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="色情"

            android:background="@null">
        </RadioButton>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="暴力"

            android:background="@null">
        </RadioButton>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="广告"

            android:background="@null">
        </RadioButton>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="欺诈"

            android:background="@null">
        </RadioButton>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="违法"

            android:background="@null">
        </RadioButton>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="头像"

            android:background="@null">
        </RadioButton>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="用户名"

            android:background="@null">
        </RadioButton>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="其他"

            android:background="@null">
        </RadioButton>
    </RadioGroup>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="举报理由(选填)"
            android:textColor="#999999"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_report_activity_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#999999"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="0/500"/>
    </RelativeLayout>
    <EditText
        android:id="@+id/et_report_activity_text"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#ffffff"
        android:maxEms="500"
        android:padding="10dp"
        />
</LinearLayout>

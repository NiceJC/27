<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_forum_video_paly"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.lede.second_23.ui.activity.ForumVideoPlayActivity">

    <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
        android:id="@+id/jcplay_forum_video_play_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"></fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard>
    <ImageView
        android:id="@+id/iv_forum_video_play_close"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:src="@mipmap/close"
        android:layout_margin="10dp"
        android:padding="8dp"/>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="110dp"
    android:layout_height="140dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    >
    <LinearLayout
        android:id="@+id/ll_all_forum_head_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/shape_linearlayout_forum_head_item1">
        <com.example.myapplication.views.diyimage.DIYImageView
            android:id="@+id/diyiv_all_forum_head_userimg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:diy_image_Type="circle"
            app:diy_border_overlay="true"
            app:diy_border_color="#ffffff"
            app:diy_border_width="2dp"
            android:src="@mipmap/test3"
            android:layout_marginTop="28dp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/tv_all_forum_head_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:text="用户昵称"
            android:layout_marginTop="15dp"
            android:textColor="#ffffff"
            />
    </LinearLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_video"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"

    tools:context="com.lede.second_23.ui.activity.MyVideoActivity">
    <RelativeLayout
        android:id="@+id/rl_my_photo_title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#222222">
        <ImageView
            android:id="@+id/iv_my_video_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:src="@mipmap/back_white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小视频"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:layout_centerInParent="true"/>
        <ImageView
            android:id="@+id/iv_my_video_menu"
            android:layout_width="34dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/menu"/>
    </RelativeLayout>
    <fm.jiecao.jcvideoplayer_lib.JCVideoPlayer
        android:id="@+id/videocontroller1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerVertical="true"/>
    <RelativeLayout
        android:id="@+id/ll_my_video_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:background="#e0000000">
        <ImageView
            android:id="@+id/iv_my_video_bt"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/btn_display_yes"/>
        <TextView
            android:id="@+id/tv_my_video_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="123"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
</RelativeLayout>

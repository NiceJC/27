<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">



        <com.example.myapplication.views.diyimage.DIYImageView
            android:id="@+id/diyiv_reply_video_fragment_userimg"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/test4"
            app:diy_image_Type="circle"
            android:layout_marginTop="27dp" />

        <TextView
            android:id="@+id/tv_reply_video_fragment_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/diyiv_reply_video_fragment_userimg"
            android:text="昵称"
            android:textColor="#ffffff"
            android:textSize="14sp"

            android:layout_marginTop="27dp"/>

        <TextView
            android:id="@+id/tv_reply_video_fragment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_reply_video_fragment_nickname"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/diyiv_reply_video_fragment_userimg"
            android:text="时间"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/iv_reply_video_fragment_close"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:padding="5dp"
            android:src="@mipmap/close"
            android:layout_alignParentRight="true"

            android:layout_marginTop="27dp"/>
        <ImageView
            android:id="@+id/iv_reply_video_fragment_menu"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:padding="5dp"
            android:layout_toLeftOf="@id/iv_reply_video_fragment_close"
            android:layout_marginRight="5dp"
            android:src="@mipmap/menu"

            android:layout_marginTop="27dp"/>



    <fm.jiecao.jcvideoplayer_lib.JCVideoPlayer

        android:id="@+id/jcplay_reply_video_fragment_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:layout_below="@id/diyiv_reply_video_fragment_userimg"
        />
</RelativeLayout>
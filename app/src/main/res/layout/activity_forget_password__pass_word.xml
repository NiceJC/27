<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_register__pass_word"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.lede.second_23.ui.activity.ForgetPassword_PassWordActivity">

    <ImageView
        android:layout_marginTop="50dp"
        android:layout_width="164dp"
        android:layout_height="24.5dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/logo_27_twenty_seven"/>
    <LinearLayout
        android:id="@+id/cv_login_activity_cardview"
        android:layout_width="300dp"
        android:layout_height="340dp"
        android:layout_centerInParent="true"
       >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/ll_forget_password_pwd"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="37dp"
                android:layout_marginRight="37dp"
                android:layout_marginTop="60dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/shap_edit_linearlayout_all">



                <EditText
                    android:id="@+id/et_forget_password_pwd_activity_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="25dp"
                    android:background="@null"
                    android:hint="新密码"
                    android:textColor="#000000"
                    android:textColorHint="#999999"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_forget_password_rpwd"
                android:layout_below="@id/ll_forget_password_pwd"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="37dp"
                android:layout_marginRight="37dp"
                android:layout_marginTop="28dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/shap_edit_linearlayout_all">



                <EditText
                    android:id="@+id/et_forget_password_pwd_activity_repwd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="25dp"
                    android:background="@null"
                    android:hint="确认密码"
                    android:textColor="#000000"
                    android:textColorHint="#999999"
                    android:textSize="20sp" />

            </LinearLayout>


            <TextView

                android:id="@+id/tv_forget_password_pwd_activity_update"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="37dp"
                android:layout_marginRight="37dp"
                android:layout_marginTop="25dp"
                android:layout_below="@id/ll_forget_password_rpwd"
                android:background="@drawable/shape__button"
                android:text="确认"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="#ffffff"/>
        </RelativeLayout>
    </LinearLayout>


